[include]
	path = local/user
	path = local/stuff
[push]
	default = current
[branch]
	autosetuprebase = always
[color]
	ui = auto
[alias]
	bclean = "!f() { git branch --merge ${1-master} | grep -v " ${1-master}$" | xargs -r git branch -d; }; f"
	bdone = "!f() { git checkout ${1-master} && git up && git bclean ${1-master}; }; f"
	fuck = "!f() { git reset HEAD --hard && git clean -dfx && git up && git bclean; }; f"
	lg = log --graph --pretty=fuller --decorate --color --show-signature
	ls = log --oneline --abbrev-commit --color
	up = pull --rebase --prune
	amend = commit --amend
[credential]
	helper = cache --socket ~/.cache/git-credential-cache/socket
[color "diff"]
	meta = yellow bold
	commit = green bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[diff]
	compactionHeuristic = true
	algorithm = histogram
[core]
	excludesfiles = ~/.config/git/ignore
	autocrlf = input
	whitespace = cr-at-eol
	pager = type -f diff-so-fancy > /dev/null 2>&1 && diff-so-fancy | less --tabs=4 -RFX || less -RFX
